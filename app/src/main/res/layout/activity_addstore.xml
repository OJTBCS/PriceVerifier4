<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backButton"
        android:layout_width="222dp"
        android:layout_height="92dp"
        android:layout_marginTop="672dp"
        android:backgroundTint="#6E3131"
        android:fontFamily="sans-serif-black"
        android:text="Back"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addStoreImageView"
        android:layout_width="97dp"
        android:layout_height="105dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toStartOf="@+id/setYourStoreTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/addstore" />

    <TextView
        android:id="@+id/setStoreTextView"
        android:layout_width="1298dp"
        android:layout_height="87dp"
        android:background="#6E3131"
        android:fontFamily="sans-serif-black"
        android:text="  SET STORE"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/addStoreImageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/setYourStoreTextView"
        android:layout_width="288dp"
        android:layout_height="65dp"
        android:layout_marginStart="376dp"
        android:fontFamily="sans-serif-black"
        android:text="SET YOUR STORE"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <ImageView
        android:id="@+id/addStoreImageView2"
        android:layout_width="97dp"
        android:layout_height="105dp"
        android:layout_marginEnd="504dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/setYourStoreTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195"
        app:srcCompat="@drawable/addstore" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="87dp"
        android:layout_marginStart="236dp"
        android:fontFamily="sans-serif-black"
        android:text="Store Code / Store Key: "
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="325dp"
        android:layout_height="92dp"
        android:layout_marginStart="236dp"
        android:fontFamily="sans-serif-black"
        android:text="Store Description: "
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="222dp"
        android:layout_height="92dp"
        android:layout_marginStart="432dp"
        android:backgroundTint="#6E3131"
        android:fontFamily="sans-serif-black"
        android:text="Update"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.575" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="222dp"
        android:layout_height="92dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#6E3131"
        android:fontFamily="sans-serif-black"
        android:text="Save"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@+id/updateButton"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="222dp"
        android:layout_height="92dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#6E3131"
        android:fontFamily="sans-serif-black"
        android:text="Delete"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.565" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="621dp"
        android:layout_height="172dp"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="196dp"
            android:layout_marginBottom="88dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:text="Store Key"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:text="Description"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>